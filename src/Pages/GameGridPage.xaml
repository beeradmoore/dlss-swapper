<Page
    x:Class="DLSS_Swapper.Pages.GameGridPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:DLSS_Swapper.Converters"
    xmlns:ct_converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:DLSS_Swapper.Data"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:pages="using:DLSS_Swapper.Pages"
    xmlns:system="using:System"
    xmlns:usercontrols="using:DLSS_Swapper.UserControls"
    x:Name="RootGameGridPage"
    d:DataContext="pages:GameGridPageModel"
    Loaded="Page_Loaded"
    NavigationCacheMode="Required"
    mc:Ignorable="d">
    <Page.Resources>
        <ct_converters:BoolNegationConverter x:Key="BoolNegationConverter" />
        <ct_converters:BoolToVisibilityConverter
            x:Key="BoolToVisibilityConverter"
            FalseValue="Collapsed"
            TrueValue="Visible" />
        <ct_converters:BoolToVisibilityConverter
            x:Key="InverseBoolToVisibilityConverter"
            FalseValue="Visible"
            TrueValue="Collapsed" />
        <ct_converters:StringVisibilityConverter
            x:Key="StringVisibilityConverter"
            EmptyValue="Collapsed"
            NotEmptyValue="Visible" />
        <converters:BitmapImageUriConverter x:Key="BitmapImageUriConverter" />




        <DataTemplate x:Key="ListViewTemplate" x:DataType="pages:GameGridPageModel">
            <ListView
                Padding="20"
                HorizontalAlignment="Stretch"
                IsItemClickEnabled="True"
                ItemClick="GridAndListView_ItemClick"
                ItemsSource="{x:Bind CurrentCollectionView, Mode=OneWay}"
                SelectionMode="None">

                <!--
                <ListView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                        <Setter Property="MinWidth" Value="0" />
                        <Setter Property="Padding" Value="12,0,0,0" />
                    </Style>
                </ListView.ItemContainerStyle>
                -->

                <ListView.GroupStyle>
                    <GroupStyle HidesIfEmpty="True">
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate x:DataType="data:GameGroup">
                                <Grid Margin="0" Visibility="{x:Bind Name, Converter={StaticResource StringVisibilityConverter}}">
                                    <TextBlock
                                        Margin="0"
                                        Style="{StaticResource TitleTextBlockStyle}"
                                        Text="{x:Bind Name}" />
                                </Grid>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="data:Game">
                        <Grid ColumnSpacing="12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="80" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Row="0"
                                Width="40"
                                Height="60"
                                BorderThickness="0"
                                CornerRadius="4">
                                <Border.Background>
                                    <ImageBrush Stretch="UniformToFill">
                                        <ImageBrush.ImageSource>
                                            <BitmapImage CreateOptions="IgnoreImageCache" UriSource="{x:Bind CoverImage, Mode=OneWay, Converter={StaticResource BitmapImageUriConverter}}" />
                                        </ImageBrush.ImageSource>
                                    </ImageBrush>
                                </Border.Background>
                            </Border>

                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{x:Bind Title}"
                                TextWrapping="Wrap" />
                            <ProgressRing
                                Grid.Column="2"
                                Width="16"
                                Height="16"
                                VerticalAlignment="Center"
                                Visibility="{x:Bind Processing, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
                            <TextBlock Grid.Column="3" VerticalAlignment="Center">
                                <Run Text="DLSS: " />
                                <Run Text="{x:Bind CurrentDLSS.Version, FallbackValue='N/A', Mode=OneWay}" />
                            </TextBlock>

                        </Grid>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </DataTemplate>

        <DataTemplate x:Key="GridVeiwTemplate" x:DataType="pages:GameGridPageModel">

            <GridView
                x:Name="MainGridView"
                Padding="20"
                IsItemClickEnabled="True"
                ItemClick="GridAndListView_ItemClick"
                ItemsSource="{x:Bind CurrentCollectionView, Mode=OneWay}"
                ManipulationMode="None"
                PointerWheelChanged="MainGridView_PointerWheelChanged"
                SelectionMode="None">

                <GridView.GroupStyle>
                    <GroupStyle HidesIfEmpty="True">
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate x:DataType="data:GameGroup">
                                <Grid Margin="0" Visibility="{x:Bind Name, Converter={StaticResource StringVisibilityConverter}}">
                                    <TextBlock
                                        Margin="0"
                                        Style="{StaticResource TitleTextBlockStyle}"
                                        Text="{x:Bind Name}" />
                                </Grid>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </GridView.GroupStyle>

                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Stretch" />
                        <Setter Property="Margin" Value="8" />
                        <Setter Property="BorderThickness" Value="0" />
                    </Style>
                </GridView.ItemContainerStyle>

                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="data:Game">
                        <Grid
                            Width="{Binding ElementName=RootGameGridPage, Path=ViewModel.GridViewItemWidth, Mode=OneWay}"
                            Height="{Binding ElementName=RootGameGridPage, Path=ViewModel.GridViewItemHeight, Mode=OneWay}"
                            Margin="0"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            ColumnSpacing="0"
                            CornerRadius="8"
                            RowSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Margin="20"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource ButtonForegroundColor}"
                                Text="{x:Bind Title}"
                                TextAlignment="Center"
                                TextWrapping="WrapWholeWords" />

                            <!--  Weird, but allows image to strecth centered rather than left align  -->
                            <Border BorderThickness="0">
                                <Border.Background>
                                    <ImageBrush Stretch="UniformToFill">
                                        <ImageBrush.ImageSource>
                                            <BitmapImage CreateOptions="IgnoreImageCache" UriSource="{x:Bind CoverImage, Mode=OneWay, Converter={StaticResource BitmapImageUriConverter}}" />
                                        </ImageBrush.ImageSource>
                                    </ImageBrush>
                                </Border.Background>
                            </Border>

                            <Grid
                                Padding="8"
                                VerticalAlignment="Bottom"
                                Background="#88000000"
                                ColumnSpacing="8">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="DLSS" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="{x:Bind CurrentDLSS.Version, FallbackValue='N/A', Mode=OneWay}"
                                    Visibility="{x:Bind Processing, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}" />
                                <ProgressRing
                                    Grid.Column="1"
                                    Width="16"
                                    Height="16"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Visibility="{x:Bind Processing, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
                            </Grid>
                        </Grid>
                    </DataTemplate>

                </GridView.ItemTemplate>
            </GridView>

        </DataTemplate>


        <usercontrols:ListGridViewTemplateSelector
            x:Key="TemplateSelector"
            GridVeiwTemplate="{StaticResource GridVeiwTemplate}"
            ListViewTemplate="{StaticResource ListViewTemplate}" />



    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Padding="16,0,16,0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel
                HorizontalAlignment="Left"
                Orientation="Horizontal"
                Spacing="16">
                <TextBlock
                    Margin="16,0,0,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="Games"
                    TextWrapping="NoWrap" />
                <muxc:ProgressRing
                    VerticalAlignment="Center"
                    IsActive="True"
                    Visibility="{x:Bind ViewModel.IsLoading, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBox
                    Width="300"
                    Height="20"
                    Margin="10,0,0,0"
                    AcceptsReturn="True"
                    IsEnabled="{x:Bind ViewModel.IsGameListLoading, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}"
                    PlaceholderText="Search"
                    TextChanged="{x:Bind ViewModel.SearchForGameEvent}" />
            </StackPanel>

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                <AppBarButton
                    Command="{x:Bind ViewModel.UnknownAssetsFoundButtonCommand}"
                    IsEnabled="{x:Bind ViewModel.IsGameListLoading, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}"
                    Label="New DLLs"
                    Visibility="{x:Bind data:GameManager.Instance.UnknownAssetsFound, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <AppBarButton.Content>
                        <FontIcon Glyph="&#xE946;" />
                    </AppBarButton.Content>
                </AppBarButton>
                <AppBarButton
                    Command="{x:Bind ViewModel.AddManualGameButtonCommand}"
                    IsEnabled="{x:Bind ViewModel.IsGameListLoading, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}"
                    Label="Add Game">
                    <AppBarButton.Content>
                        <FontIcon Glyph="&#xE710;" />
                    </AppBarButton.Content>
                </AppBarButton>
                <AppBarButton
                    Command="{x:Bind ViewModel.RefreshGamesButtonCommand}"
                    IsEnabled="{x:Bind ViewModel.IsLoading, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}"
                    Label="Refresh">
                    <AppBarButton.Content>
                        <FontIcon Glyph="&#xE72C;" />
                    </AppBarButton.Content>
                </AppBarButton>
                <AppBarButton
                    Command="{x:Bind ViewModel.FilterGamesButtonCommand}"
                    Icon="Filter"
                    IsEnabled="{x:Bind ViewModel.IsGameListLoading, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}"
                    Label="Filter">
                    <AppBarButton.Content>
                        <FontIcon Glyph="&#xE71C;" />
                    </AppBarButton.Content>
                </AppBarButton>
                <AppBarButton Content="{x:Bind ViewModel.GameGridViewIcon, Mode=OneWay}" Label="View Type">
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem
                                Command="{x:Bind ViewModel.ChangeGameGridViewCommand}"
                                CommandParameter="{x:Bind pages:GameGridViewType.GridView}"
                                Text="Grid view" />
                            <MenuFlyoutItem
                                Command="{x:Bind ViewModel.ChangeGameGridViewCommand}"
                                CommandParameter="{x:Bind pages:GameGridViewType.ListView}"
                                Text="List view" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </StackPanel>

            <InfoBar
                x:Name="AdminInfoBar"
                Title="Warning"
                Grid.Row="1"
                IsClosable="False"
                IsOpen="True"
                Message="This app is running with administrative privileges."
                Severity="Warning"
                Visibility="{x:Bind system:Environment.IsPrivilegedProcess, Converter={StaticResource BoolToVisibilityConverter}}" />
        </Grid>

        <ContentControl
            x:Name="MainContentControl"
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            Content="{x:Bind ViewModel, Mode=OneWay}"
            ContentTemplateSelector="{StaticResource TemplateSelector}" />

    </Grid>

</Page>
