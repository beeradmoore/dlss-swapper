<?xml version="1.0" encoding="utf-8"?>
<usercontrols:FakeContentDialog
    x:Class="DLSS_Swapper.UserControls.GameControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:usercontrols="using:DLSS_Swapper.UserControls"
    xmlns:converters="using:DLSS_Swapper.Converters"
    xmlns:helpers="using:DLSS_Swapper.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ct_converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:data="using:DLSS_Swapper.Data"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=usercontrols:GameControlModel, IsDesignTimeCreatable=True}"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch">

    <usercontrols:FakeContentDialog.Resources>
        <ct_converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" TrueValue="Visible" FalseValue="Collapsed"  />
        <ct_converters:BoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" TrueValue="Collapsed" FalseValue="Visible" />
        <ct_converters:BoolNegationConverter x:Key="BoolNegationConverter"  />
        <ct_converters:BoolToVisibilityConverter x:Key="BoolToInvisibilityConverter" TrueValue="Collapsed" FalseValue="Visible" />
        <ct_converters:BoolToObjectConverter x:Key="FavouriteTextConverter" TrueValue="{Binding TranslationProperties.FavouritedText, Mode=OneWay}" FalseValue="{Binding TranslationProperties.ClickToFavouriteText, Mode=OneWay}" />
        <ct_converters:BoolToObjectConverter x:Key="FavouriteGlyphConverter" TrueValue="&#xE735;" FalseValue="&#xE734;" />
        <ct_converters:EmptyObjectToObjectConverter x:Key="NullObjectToBoolConverter" NotEmptyValue="True" EmptyValue="False" />
        <ct_converters:EmptyCollectionToObjectConverter  x:Key="EmptyCollectionToObjectConverter" NotEmptyValue="True" EmptyValue="False" />

        <converters:DLSSStateVisibilityConverter x:Key="IsDownloadingConverter" DesierdState="Downloading" />
        <converters:DLSSStateVisibilityConverter x:Key="IsDownloadedConverter" DesierdState="Downloaded" />
        <converters:DLSSStateVisibilityConverter x:Key="IsNotFoundConverter" DesierdState="NotFound" />
        <converters:DLSSStateVisibilityConverter x:Key="IsImportedConverter" DesierdState="Imported" />
        <converters:BitmapImageUriConverter x:Key="BitmapImageUriConverter" />
        <converters:NullableBoolToObjectConverter x:Key="HideGameTextConverter" NullValue="{Binding TranslationProperties.ClickToHideText, Mode=OneWay}" FalseValue="{Binding TranslationProperties.ClickToHideText, Mode=OneWay}" TrueValue="{Binding TranslationProperties.HiddenText, Mode=OneWay}" />
        <converters:NullableBoolToObjectConverter x:Key="HideGameGlyphConverter" NullValue="&#xE7B3;" FalseValue="&#xE7B3;" TrueValue="&#xED1A;"  />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:NullToInverseVisibilityConverter x:Key="NullToInverseVisibilityConverter" />
        

        <ControlTemplate x:Key="LeftButtonsControlTemplate" TargetType="ContentControl">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" XYFocusKeyboardNavigation="Enabled" Padding="{ThemeResource ContentDialogPadding}" Background="{TemplateBinding Background}" Spacing="8">


                <Button Command="{Binding LaunchCommand}" ToolTipService.ToolTip="{Binding TranslationProperties.LaunchText, Mode=OneWay}">
                    <Button.Content>
                        <FontIcon Style="{StaticResource SagoeFluentIconsFontIcon}" Glyph="&#xE768;" />
                    </Button.Content>
                </Button>

                <Button ToolTipService.ToolTip="{Binding TranslationProperties.NotesText, Mode=OneWay}" Command="{Binding EditNotesCommand}">
                    <Button.Content>
                        <FontIcon Style="{StaticResource SagoeFluentIconsFontIcon}" Glyph="&#xE70B;"/>
                    </Button.Content>
                </Button>

                <Button ToolTipService.ToolTip="{Binding TranslationProperties.HistoryText, Mode=OneWay}" Command="{Binding ViewHistoryCommand}">
                    <Button.Content>
                        <FontIcon Style="{StaticResource SagoeFluentIconsFontIcon}" Glyph="&#xE81C;"/>
                    </Button.Content>
                </Button>

                <!--
                <Button ToolTipService.ToolTip="{Binding TranslationProperties.ResetAllText, Mode=OneWay}" Command="{Binding ResetAllCommand}">
                    <Button.Content>
                        <FontIcon Style="{StaticResource SagoeFluentIconsFontIcon}" Glyph="&#xED62;"/>
                    </Button.Content>
                </Button>
                -->

                <Button Command="{Binding FavouriteCommand}" ToolTipService.ToolTip="{Binding Game.IsFavourite, Converter={StaticResource FavouriteTextConverter}}">
                    <Button.Content>
                        <FontIcon Style="{StaticResource SagoeFluentIconsFontIcon}" Glyph="{Binding Game.IsFavourite, Converter={StaticResource FavouriteGlyphConverter}}"/>
                    </Button.Content>
                </Button>

                <Button Command="{Binding ReloadGameCommand}" ToolTipService.ToolTip="{Binding TranslationProperties.ReloadText, Mode=OneWay}">
                    <Button.Content>
                        <FontIcon Style="{StaticResource SagoeFluentIconsFontIcon}" Glyph="&#xE72C;"/>
                    </Button.Content>
                </Button>

                <Button Command="{Binding ShowHideGameCommand}" ToolTipService.ToolTip="{Binding Game.IsHidden, Mode=OneWay, Converter={StaticResource HideGameTextConverter}}">
                    <Button.Content>
                        <FontIcon Style="{StaticResource SagoeFluentIconsFontIcon}" Glyph="{Binding Game.IsHidden, Mode=OneWay, Converter={StaticResource HideGameGlyphConverter}}" />
                    </Button.Content>
                </Button>

            </StackPanel>
        </ControlTemplate>

        <ControlTemplate x:Key="RightButtonsControlTemplate" TargetType="ContentControl">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" XYFocusKeyboardNavigation="Enabled" Padding="{ThemeResource ContentDialogPadding}" Background="{TemplateBinding Background}" Spacing="8">
                <Button Content="{Binding TranslationProperties.RemoveText, Mode=OneWay}" Visibility="{Binding IsManuallyAdded, Converter={StaticResource BoolToVisibilityConverter}}" Command="{Binding RemoveCommand}" />
                <Button x:Name="CloseButton" IsTabStop="False" Content="{Binding TranslationProperties.CloseText, Mode=OneWay}" Style="{ThemeResource DefaultButtonStyle}" ElementSoundMode="FocusOnly" Command="{Binding CloseCommand}" KeyboardAcceleratorPlacementMode="Hidden">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Escape" Modifiers="None" />
                    </Button.KeyboardAccelerators>
                </Button>
            </StackPanel>
        </ControlTemplate>

        <Style x:Key="InformationalFontIcon" TargetType="FontIcon">
            <Setter Property="Glyph" Value="&#xE946;" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{ThemeResource InformationalIconColor}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

    </usercontrols:FakeContentDialog.Resources>

    <usercontrols:FakeContentDialog.Content>
        <Grid Grid.Row="0" ColumnSpacing="20" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="8">
                <Grid Width="200" Height="300" CornerRadius="8"  BorderThickness="1" ColumnSpacing="0" RowSpacing="0" Margin="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">

                    <!-- Padding="{ThemeResource ContentDialogPadding}" -->

                    <!-- Weird, but allows image to strecth centered rather than left align -->
                    <Border BorderThickness="0" Width="200" Height="300" FlowDirection="LeftToRight">
                        <Border.RenderTransform>
                            <CompositeTransform ScaleX="1" />
                        </Border.RenderTransform>
                        <Border.Background>
                            <ImageBrush Stretch="UniformToFill">
                                <ImageBrush.ImageSource>
                                    <BitmapImage CreateOptions="IgnoreImageCache" UriSource="{x:Bind ViewModel.Game.CoverImage, Mode=OneWay, Converter={StaticResource BitmapImageUriConverter}}"/>
                                </ImageBrush.ImageSource>
                            </ImageBrush>
                        </Border.Background>
                    </Border>

                    <Button HorizontalAlignment="Stretch" Background="Transparent" VerticalAlignment="Stretch" Command="{x:Bind ViewModel.AddCoverImageCommand}" AllowDrop="True" DragEnter="CoverButton_DragEnter" DragOver="CoverButton_DragOver" Drop="CoverButton_Drop" />
                </Grid>
                <Button Content="{x:Bind ViewModel.TranslationProperties.AddCustomCoverText, Mode=OneWay}" HorizontalAlignment="Stretch" Command="{x:Bind ViewModel.AddCoverImageCommand}" />
            </StackPanel>

            <Grid Grid.Column="1" >

                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Spacing="4">

                    <InfoBar
                        Visibility="{x:Bind ViewModel.Game.IsReadyToPlay, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                        Severity="Warning"
                        IsOpen="True"
                        IsClosable="False"
                        Message="{x:Bind ViewModel.TranslationProperties.GameNotReadyToPlayStateText, Mode=OneWay}">
                        <InfoBar.ActionButton>
                            <Button Content="{x:Bind ViewModel.TranslationProperties.HelpText, Mode=OneWay}" Command="{x:Bind ViewModel.ReadyToPlayStateMoreInformationCommand}" HorizontalAlignment="Right" />
                        </InfoBar.ActionButton>
                    </InfoBar>

                    <TextBlock Text="{x:Bind ViewModel.TranslationProperties.NameText, Mode=OneWay}" FontWeight="Bold" />
                    <Grid HorizontalAlignment="Stretch" ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" VerticalAlignment="Stretch" Text="{x:Bind ViewModel.GameTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{x:Bind ViewModel.IsManuallyAdded, Converter={StaticResource BoolNegationConverter}}" />
                        <Button Grid.Column="1" VerticalAlignment="Stretch" ToolTipService.ToolTip="{x:Bind ViewModel.TranslationProperties.SaveText, Mode=OneWay}" Visibility="{x:Bind ViewModel.IsManuallyAdded, Converter={StaticResource BoolToVisibilityConverter}}" IsEnabled="{x:Bind ViewModel.GameTitleHasChanged, Mode=OneWay}" Command="{x:Bind ViewModel.SaveTitleCommand}">
                            <Button.Content>
                                <FontIcon Style="{StaticResource SagoeFluentIconsFontIcon}" Glyph="&#xE74E;"/>
                            </Button.Content>
                        </Button>
                    </Grid>

                    <TextBlock Text="{x:Bind ViewModel.TranslationProperties.InstallPathText, Mode=OneWay}" FontWeight="Bold" Padding="0,8,0,0" />
                    <Grid HorizontalAlignment="Stretch" ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" IsReadOnly="True" Text="{x:Bind ViewModel.Game.InstallPath}" VerticalAlignment="Stretch" />
                        <Button Grid.Column="1" ToolTipService.ToolTip="{x:Bind ViewModel.TranslationProperties.OpenFolderText, Mode=OneWay}" VerticalAlignment="Stretch" Command="{x:Bind ViewModel.OpenInstallPathCommand}">
                            <Button.Content>
                                <FontIcon Style="{StaticResource SagoeFluentIconsFontIcon}" Glyph="&#xE8A7;"/>
                            </Button.Content>
                        </Button>
                    </Grid>

                    <Grid HorizontalAlignment="Stretch" ColumnSpacing="16" RowSpacing="4" Padding="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="0" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="0" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Padding="0" Spacing="6" Grid.Column="0" Grid.Row="0">
                            <TextBlock Text="{x:Bind data:DLLManager.Instance.GetAssetTypeName(data:GameAssetType.DLSS)}" FontWeight="Bold" VerticalAlignment="Center" Margin="0" Padding="0" />
                            <Button Style="{StaticResource TextBlockButtonStyle}" Visibility="{x:Bind ViewModel.Game.MultipleDLSSFound, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" Command="{Binding MultipleDLLsFoundCommand}" CommandParameter="{x:Bind data:GameAssetType.DLSS}" Padding="0" ToolTipService.ToolTip="{x:Bind ViewModel.TranslationProperties.MultipleDllsFoundText, Mode=OneWay}">
                                <Button.Content>
                                    <FontIcon Style="{StaticResource InformationalFontIcon}" />
                                </Button.Content>
                            </Button>
                        </StackPanel>

                        <DropDownButton Grid.Column="0" Grid.Row="1" IsEnabled="{x:Bind ViewModel.Game.CurrentDLSS, Converter={StaticResource NullObjectToBoolConverter}}" Command="{x:Bind ViewModel.ChangeRecordCommand}" CommandParameter="{x:Bind data:GameAssetType.DLSS}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                            <DropDownButton.Content>
                                <StackPanel>
                                    <TextBlock Text="{x:Bind ViewModel.Game.CurrentDLSS.DisplayName, FallbackValue='', Mode=OneWay}" Visibility="{x:Bind ViewModel.Game.CurrentDLSS, Converter={StaticResource NullToVisibilityConverter}}" />
                                    <TextBlock Text="{x:Bind ViewModel.TranslationProperties.NotFoundText, Mode=OneWay}" Visibility="{x:Bind ViewModel.Game.CurrentDLSS, Converter={StaticResource NullToInverseVisibilityConverter}}" />
                                </StackPanel>
                            </DropDownButton.Content>
                        </DropDownButton>

                        <StackPanel Grid.Column="1" Grid.Row="0" Spacing="6" Orientation="Horizontal">
                            <TextBlock Text="{x:Bind ViewModel.TranslationProperties.DLSSPresetText, Mode=OneWay}" FontWeight="Bold"/>
                            <Button Style="{StaticResource TextBlockButtonStyle}" Visibility="{x:Bind ViewModel.CanSelectDlssPreset, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" Command="{Binding DLSSPresetInfoCommand}" Padding="0" ToolTipService.ToolTip="{x:Bind ViewModel.TranslationProperties.DLSSPresetInfoTooltipText, Mode=OneWay}">
                                <Button.Content>
                                    <FontIcon Style="{StaticResource InformationalFontIcon}" />
                                </Button.Content>
                            </Button>
                        </StackPanel>

                        <Grid Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox
                                Grid.Column="0"
                                HorizontalAlignment="Stretch"
                                SelectedItem="{x:Bind ViewModel.SelectedDlssPreset, Mode=TwoWay}"
                                ItemsSource="{x:Bind ViewModel.DlssPresetOptions}"
                                DisplayMemberPath="Name"
                                IsEnabled="{x:Bind ViewModel.CanSelectDlssPreset, Mode=OneWay}" />

                            <Button Grid.Column="1" Padding="12,0,0,0" Visibility="{x:Bind helpers:NVAPIHelper.Instance.PermissionIssue, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" Command="{x:Bind ViewModel.NVAPIErrorCommand, Mode=OneTime}" ToolTipService.ToolTip="{x:Bind ViewModel.TranslationProperties.NVAPIErrorTooltipText, Mode=OneWay}" Style="{StaticResource TextBlockButtonStyle}" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <Button.Content>
                                    <FontIcon Style="{StaticResource ErrorFontIcon}" />
                                </Button.Content>
                            </Button>
                        </Grid>


                        <StackPanel Orientation="Horizontal" Padding="0" Spacing="6" Grid.Column="0" Grid.Row="3">
                            <TextBlock Text="{x:Bind data:DLLManager.Instance.GetAssetTypeName(data:GameAssetType.DLSS_D)}" FontWeight="Bold" />
                            <Button Style="{StaticResource TextBlockButtonStyle}" Visibility="{x:Bind ViewModel.Game.MultipleDLSSDFound, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" Command="{Binding MultipleDLLsFoundCommand}" CommandParameter="{x:Bind data:GameAssetType.DLSS_D}" Padding="0" ToolTipService.ToolTip="{x:Bind ViewModel.TranslationProperties.MultipleDllsFoundText, Mode=OneWay}">
                                <Button.Content>
                                    <FontIcon Style="{StaticResource InformationalFontIcon}" />
                                </Button.Content>
                            </Button>
                        </StackPanel>

                        <DropDownButton Grid.Column="0" Grid.Row="4" IsEnabled="{x:Bind ViewModel.Game.CurrentDLSS_D, Converter={StaticResource NullObjectToBoolConverter}}" Command="{x:Bind ViewModel.ChangeRecordCommand}" CommandParameter="{x:Bind data:GameAssetType.DLSS_D}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                            <DropDownButton.Content>
                                <StackPanel>
                                    <TextBlock Text="{x:Bind ViewModel.Game.CurrentDLSS_D.DisplayName, FallbackValue='', Mode=OneWay}" Visibility="{x:Bind ViewModel.Game.CurrentDLSS_D, Converter={StaticResource NullToVisibilityConverter}}" />
                                    <TextBlock Text="{x:Bind ViewModel.TranslationProperties.NotFoundText, Mode=OneWay}" Visibility="{x:Bind ViewModel.Game.CurrentDLSS_D, Converter={StaticResource NullToInverseVisibilityConverter}}" />
                                </StackPanel>
                            </DropDownButton.Content>
                        </DropDownButton>

                        <StackPanel Grid.Column="1" Grid.Row="3" Spacing="6" Orientation="Horizontal">
                            <TextBlock Text="{x:Bind ViewModel.TranslationProperties.DLSSDPresetText, Mode=OneWay}" FontWeight="Bold"/>
                            <Button Style="{StaticResource TextBlockButtonStyle}" Visibility="{x:Bind ViewModel.CanSelectDlssDPreset, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" Command="{Binding DLSSPresetInfoCommand}" Padding="0" ToolTipService.ToolTip="{x:Bind ViewModel.TranslationProperties.DLSSPresetInfoTooltipText, Mode=OneWay}">
                                <Button.Content>
                                    <FontIcon Style="{StaticResource InformationalFontIcon}" />
                                </Button.Content>
                            </Button>
                        </StackPanel>



                        <Grid Grid.Column="1" Grid.Row="4" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox Grid.Column="0"
                                HorizontalAlignment="Stretch"
                                SelectedItem="{x:Bind ViewModel.SelectedDlssDPreset, Mode=TwoWay}"
                                ItemsSource="{x:Bind ViewModel.DlssDPresetOptions}"
                                DisplayMemberPath="Name"
                                IsEnabled="{x:Bind ViewModel.CanSelectDlssDPreset, Mode=OneWay}" />

                            <Button Grid.Column="1" Padding="12,0,0,0" Visibility="{x:Bind helpers:NVAPIHelper.Instance.PermissionIssue, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" Command="{x:Bind ViewModel.NVAPIErrorCommand, Mode=OneTime}" ToolTipService.ToolTip="{x:Bind ViewModel.TranslationProperties.NVAPIErrorTooltipText, Mode=OneWay}" Style="{StaticResource TextBlockButtonStyle}" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <Button.Content>
                                    <FontIcon Style="{StaticResource ErrorFontIcon}" />
                                </Button.Content>
                            </Button>
                        </Grid>




                        <StackPanel Orientation="Horizontal" Padding="0" Spacing="6" Grid.Column="0" Grid.Row="6" >
                            <TextBlock Text="{x:Bind data:DLLManager.Instance.GetAssetTypeName(data:GameAssetType.DLSS_G)}" FontWeight="Bold" />
                            <Button Style="{StaticResource TextBlockButtonStyle}" Visibility="{x:Bind ViewModel.Game.MultipleDLSSGFound, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" Command="{Binding MultipleDLLsFoundCommand}" CommandParameter="{x:Bind data:GameAssetType.DLSS_G}" Padding="0" ToolTipService.ToolTip="{x:Bind ViewModel.TranslationProperties.MultipleDllsFoundText, Mode=OneWay}">
                                <Button.Content>
                                    <FontIcon Style="{StaticResource InformationalFontIcon}" />
                                </Button.Content>
                            </Button>
                        </StackPanel>

                        <DropDownButton Grid.Column="0" Grid.Row="7" IsEnabled="{x:Bind ViewModel.Game.CurrentDLSS_G, Converter={StaticResource NullObjectToBoolConverter}}" Command="{x:Bind ViewModel.ChangeRecordCommand}" CommandParameter="{x:Bind data:GameAssetType.DLSS_G}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                            <DropDownButton.Content>
                                <StackPanel>
                                    <TextBlock Text="{x:Bind ViewModel.Game.CurrentDLSS_G.DisplayName, FallbackValue='', Mode=OneWay}" Visibility="{x:Bind ViewModel.Game.CurrentDLSS_G, Converter={StaticResource NullToVisibilityConverter}}" />
                                    <TextBlock Text="{x:Bind ViewModel.TranslationProperties.NotFoundText, Mode=OneWay}" Visibility="{x:Bind ViewModel.Game.CurrentDLSS_G, Converter={StaticResource NullToInverseVisibilityConverter}}" />
                                </StackPanel>
                            </DropDownButton.Content>
                        </DropDownButton>



                    </Grid>


                    <Grid HorizontalAlignment="Stretch" ColumnSpacing="16" RowSpacing="4" Padding="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Padding="0" Spacing="6" Grid.Column="0" Grid.Row="0">
                            <TextBlock Text="{x:Bind data:DLLManager.Instance.GetAssetTypeName(data:GameAssetType.FSR_31_DX12)}" FontWeight="Bold" />
                            <Button Style="{StaticResource TextBlockButtonStyle}" Visibility="{x:Bind ViewModel.Game.MultipleFSR31DX12Found, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" Command="{Binding MultipleDLLsFoundCommand}" CommandParameter="{x:Bind data:GameAssetType.FSR_31_DX12}" Padding="0" ToolTipService.ToolTip="{x:Bind ViewModel.TranslationProperties.MultipleDllsFoundText, Mode=OneWay}">
                                <Button.Content>
                                    <FontIcon Style="{StaticResource InformationalFontIcon}" />
                                </Button.Content>
                            </Button>
                        </StackPanel>

                        <DropDownButton Grid.Column="0" Grid.Row="1" IsEnabled="{x:Bind ViewModel.Game.CurrentFSR_31_DX12, Converter={StaticResource NullObjectToBoolConverter}}" Command="{x:Bind ViewModel.ChangeRecordCommand}" CommandParameter="{x:Bind data:GameAssetType.FSR_31_DX12}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                            <DropDownButton.Content>
                                <StackPanel>
                                    <TextBlock Text="{x:Bind ViewModel.Game.CurrentFSR_31_DX12.DisplayName, FallbackValue='', Mode=OneWay}" Visibility="{x:Bind ViewModel.Game.CurrentFSR_31_DX12, Converter={StaticResource NullToVisibilityConverter}}" />
                                    <TextBlock Text="{x:Bind ViewModel.TranslationProperties.NotFoundText, Mode=OneWay}" Visibility="{x:Bind ViewModel.Game.CurrentFSR_31_DX12, Converter={StaticResource NullToInverseVisibilityConverter}}" />
                                </StackPanel>
                            </DropDownButton.Content>
                        </DropDownButton>


                        <StackPanel Orientation="Horizontal" Padding="0" Spacing="6" Grid.Column="1" Grid.Row="0">
                            <TextBlock Text="{x:Bind data:DLLManager.Instance.GetAssetTypeName(data:GameAssetType.FSR_31_VK)}" FontWeight="Bold" />
                            <Button Style="{StaticResource TextBlockButtonStyle}" Visibility="{x:Bind ViewModel.Game.MultipleFSR31VKFound, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" Command="{Binding MultipleDLLsFoundCommand}" CommandParameter="{x:Bind data:GameAssetType.FSR_31_VK}" Padding="0" ToolTipService.ToolTip="{x:Bind ViewModel.TranslationProperties.MultipleDllsFoundText, Mode=OneWay}">
                                <Button.Content>
                                    <FontIcon Style="{StaticResource InformationalFontIcon}" />
                                </Button.Content>
                            </Button>
                        </StackPanel>

                        <DropDownButton Grid.Column="1" Grid.Row="1" IsEnabled="{x:Bind ViewModel.Game.CurrentFSR_31_VK, Converter={StaticResource NullObjectToBoolConverter}}" Command="{x:Bind ViewModel.ChangeRecordCommand}" CommandParameter="{x:Bind data:GameAssetType.FSR_31_VK}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                            <DropDownButton.Content>
                                <StackPanel>
                                    <TextBlock Text="{x:Bind ViewModel.Game.CurrentFSR_31_VK.DisplayName, FallbackValue='', Mode=OneWay}" Visibility="{x:Bind ViewModel.Game.CurrentFSR_31_VK, Converter={StaticResource NullToVisibilityConverter}}" />
                                    <TextBlock Text="{x:Bind ViewModel.TranslationProperties.NotFoundText, Mode=OneWay}" Visibility="{x:Bind ViewModel.Game.CurrentFSR_31_VK, Converter={StaticResource NullToInverseVisibilityConverter}}" />
                                </StackPanel>
                            </DropDownButton.Content>
                        </DropDownButton>

                    </Grid>


                    <Grid HorizontalAlignment="Stretch" ColumnSpacing="16" RowSpacing="4" Padding="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="0" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Padding="0" Spacing="6" Grid.Column="0" Grid.Row="0">
                            <TextBlock Text="{x:Bind data:DLLManager.Instance.GetAssetTypeName(data:GameAssetType.XeSS)}" FontWeight="Bold" />
                            <Button Style="{StaticResource TextBlockButtonStyle}" Visibility="{x:Bind ViewModel.Game.MultipleXeSSFound, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" Command="{Binding MultipleDLLsFoundCommand}" CommandParameter="{x:Bind data:GameAssetType.XeSS}" Padding="0" ToolTipService.ToolTip="{x:Bind ViewModel.TranslationProperties.MultipleDllsFoundText, Mode=OneWay}">
                                <Button.Content>
                                    <FontIcon Style="{StaticResource InformationalFontIcon}" />
                                </Button.Content>
                            </Button>
                        </StackPanel>

                        <DropDownButton Grid.Column="0" Grid.Row="1" IsEnabled="{x:Bind ViewModel.Game.CurrentXeSS, Converter={StaticResource NullObjectToBoolConverter}}" Command="{x:Bind ViewModel.ChangeRecordCommand}" CommandParameter="{x:Bind data:GameAssetType.XeSS}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                            <DropDownButton.Content>
                                <StackPanel>
                                    <TextBlock Text="{x:Bind ViewModel.Game.CurrentXeSS.DisplayName, FallbackValue='', Mode=OneWay}" Visibility="{x:Bind ViewModel.Game.CurrentXeSS, Converter={StaticResource NullToVisibilityConverter}}" />
                                    <TextBlock Text="{x:Bind ViewModel.TranslationProperties.NotFoundText, Mode=OneWay}" Visibility="{x:Bind ViewModel.Game.CurrentXeSS, Converter={StaticResource NullToInverseVisibilityConverter}}" />
                                </StackPanel>
                            </DropDownButton.Content>
                        </DropDownButton>


                        <StackPanel Orientation="Horizontal" Padding="0" Spacing="6" Grid.Column="1" Grid.Row="0">
                            <TextBlock Text="{x:Bind data:DLLManager.Instance.GetAssetTypeName(data:GameAssetType.XeSS_FG)}" FontWeight="Bold" />
                            <Button Style="{StaticResource TextBlockButtonStyle}" Visibility="{x:Bind ViewModel.Game.MultipleXeSSFGFound, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" Command="{Binding MultipleDLLsFoundCommand}" CommandParameter="{x:Bind data:GameAssetType.XeSS_FG}" Padding="0" ToolTipService.ToolTip="{x:Bind ViewModel.TranslationProperties.MultipleDllsFoundText, Mode=OneWay}">
                                <Button.Content>
                                    <FontIcon Style="{StaticResource InformationalFontIcon}" />
                                </Button.Content>
                            </Button>
                        </StackPanel>

                        <DropDownButton Grid.Column="1" Grid.Row="1" IsEnabled="{x:Bind ViewModel.Game.CurrentXeSS_FG, Converter={StaticResource NullObjectToBoolConverter}}" Command="{x:Bind ViewModel.ChangeRecordCommand}" CommandParameter="{x:Bind data:GameAssetType.XeSS_FG}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                            <DropDownButton.Content>
                                <StackPanel>
